  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <meta name="GreenCoin" content="GreenCoin is a peer-to-peer carbon trading platform.">
</head>
<body>
  <div>
  <%= render 'layouts/header' %>
  </div>
  <div class="container">
    <div>
    <div><%= render 'layouts/messages' %></div>
      <%= yield %>
    </div>
    <div>
    <%= render 'layouts/footer' %>
    <%= debug(params) if Rails.env.development? %>
  </div>
  </div>

</body>
</html>

